{
  "name": "tek-input-keyboard",
  "version": "0.0.9",
  "description": "A custom input and keyboard",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier --write . && eslint --fix --ignore-pattern .next --ignore-pattern node_modules --ignore-pattern dist",
    "build": "tsc",
    "copy-css": "mkdir -p dist/styles && cp src/components/InputKeyboard/style.css dist/styles/",
    "version:patch": "npm version patch --no-git-tag-version",
    "tag-version": "node scripts/create-version-tag.js",
    "release": "npm run clean && npm run format && npm run build && npm run copy-css && git diff --quiet || (git add . && git commit -m \"chore: release\") && npm run version:patch && npm run tag-version"
  },
  "keywords": [
    "react",
    "input",
    "keyboard"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "clsx": "^2.1.1",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TheHappyLife/input-keyboard"
  }
}
